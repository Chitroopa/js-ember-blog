<div class="blog-post">
  <h2 class="blog-post-title">{{post.title}}</h2>
  <p class="blog-post-meta">{{moment-format post.created 'L'}} by <i><b>{{post.author}}</b></i></p>
  <hr>
  <p>{{post.content}}</p>
  {{update-post post=post update2="update3" delete2="delete3"}}
  {{new-comment post=post saveComment2="saveComment3"}}
  {{#each post.comments as |a|}}
    <br>{{comment-tile comment=a updateComment4="updateComment5" deleteComment4="deleteComment5"}}
  {{/each}}
</div>
